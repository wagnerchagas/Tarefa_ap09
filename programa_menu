#programa com menu
from random import randint

op = randint(1, 4)
n1 = randint(1, 10)
n2 = randint(1, 10)

if op == 1:
    print(f"{n1} + {n2} = {n1 + n2}")
elif op == 2:
    print(f"{n1} - {n2} = {n1 - n2}")
elif op == 3:
    print(f"{n1} * {n2} = {n1 * n2}")
elif op == 4:
    if n2 != 0:
        print(f"{n1} / {n2} = {n1 / n2:.2f}")
    else:
        print("Divisão por zero!")
else:
    print("Operação inválida.")
